# Production Environment Variables
NODE_ENV="production"

# App Configuration
VITE_APP_NAME="RowGram"
VITE_APP_VERSION="1.0.0"
VITE_APP_URL="https://rowgram.co.uk"

# File Upload (Production)
UPLOAD_DIR="public/uploads"
MAX_FILE_SIZE="10485760"

# Performance
DATABASE_POOL_SIZE=20
REDIS_URL="redis://localhost:6379"

# Image Generation (Production)
IMAGE_GENERATION_API_URL="https://api.rowgram.co.uk/generate"

# Security Headers
SECURITY_HEADERS="true"

# CDN Configuration
CDN_URL="https://cdn.rowgram.co.uk"

# Note: Sensitive production values should be set via deployment platform
# DATABASE_URL - Set via platform
# NEXTAUTH_SECRET - Set via platform
# GOOGLE_CLIENT_ID - Set via platform
# GOOGLE_CLIENT_SECRET - Set via platform